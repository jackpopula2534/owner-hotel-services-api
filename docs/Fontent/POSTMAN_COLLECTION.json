{
    "info": {
        "_postman_id": "staysync-api-collection",
        "name": "StaySync API",
        "description": "API Collection for StaySync Platform based on API_TASK_OVERVIEW.md",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Notifications",
            "item": [
                {
                    "name": "Get Notifications",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/v1/notifications?page=1&limit=10",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "v1",
                                "notifications"
                            ],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "1"
                                },
                                {
                                    "key": "limit",
                                    "value": "10"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Mark as Read",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/v1/notifications/:id/read",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "v1",
                                "notifications",
                                ":id",
                                "read"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "notification_id"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Mark All as Read",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/v1/notifications/read-all",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "v1",
                                "notifications",
                                "read-all"
                            ]
                        }
                    }
                }
            ]
        },
